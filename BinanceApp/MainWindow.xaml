<Window x:Class="BinanceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Binance Coin Tracker (EUR Pairs)" Height="500" Width="600">
    <StackPanel Margin="10">
        <TextBlock Text="Select the coin you bought:" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox Width="200"
                  ItemsSource="{Binding AllCoinIndicators}"
                  DisplayMemberPath="Symbol"
                  SelectedItem="{Binding SelectedBoughtCoin, Mode=TwoWay}" />
        <TextBlock Text="Scanning all EUR coins every 15 minutes for buy opportunities. Sell alerts only for your bought coin." 
                   FontWeight="Bold" Foreground="DarkGreen" Margin="0,10,0,10"/>
        <ListView ItemsSource="{Binding AllCoinIndicators}" Height="400">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Symbol" DisplayMemberBinding="{Binding Symbol}" Width="100"/>
                    <GridViewColumn Header="RSI(14)" DisplayMemberBinding="{Binding RSI, StringFormat=F2}" Width="80"/>
                    <GridViewColumn Header="VWAP" DisplayMemberBinding="{Binding VWAP}" Width="120"/>
                    <GridViewColumn Header="Price (EUR)" DisplayMemberBinding="{Binding CurrentPrice, StringFormat=F6}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>
